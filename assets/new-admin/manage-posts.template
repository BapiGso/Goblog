{{template "admin-header.template" }}
<div id="smoe-root">
    <div id="main">
        <div class="tab-bar">
            <div class="btn-group btn-group-block">
                <button class="btn btn-primary">文章</button>
                <button class="btn btn-primary">页面</button>
                <button class="btn btn-primary">评论</button>
                <button class="btn btn-primary">文件</button>
            </div>
            <div class="btn-group btn-group-block">
                <button class="btn">可用</button>
                <button class="btn">待审核</button>
                <button class="btn">草稿</button>
            </div>
        </div>


        <div class="list-operate">
            <label class="checkbox">
                <div class="dropdown">
                    <div class="btn-group">选中项<i class="icon icon-caret"></i></a>
                        <ul class="menu">
                            <li class="menu-item">删除</li>
                            <li class="menu-item">标记为<b>公开</b></li>
                            <li class="menu-item">标记为<b>待审核</b></li>
                            <li class="menu-item">标记为<b>隐藏</b></li>
                            <li class="menu-item">标记为<b>私密</b></li>
                        </ul>
                    </div>
                </div>
            </label>

            <div class="input-group input-inline">
                <input class="form-input" type="text" placeholder="请输入关键字">
                <button class="btn btn-primary input-group-btn">筛选</button>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>标题</th>
                <th>日期</th>
            </tr>
            </thead>
            <tbody>
            {{range .PostArr}}
            <tr>
                <td>
                    <input type="checkbox">
                </td>
                <td>
                    <a href="/admin/write-post?cid={{.Cid}}">
                        <strong>{{.Title}}</strong>
                    </a>
                </td>
                <td>
                    {{.UnixFormat}}
                </td>
            </tr>
            {{end}}
            </tbody>
        </table>
    </div>
</div>
{{template "admin-footer.template"}}