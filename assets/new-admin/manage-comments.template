{{template "admin-header.template"}}
<div id="smoe-root">
    <div id="main">
        <div class="navbar">
            <section class="navbar-section">
                <a href="/admin/manage-posts" class="btn btn-link">文章</a>
                <a href="/admin/manage-pages" class="btn btn-link">页面</a>
                <a href="/admin/manage-comments" class="btn btn-link">评论</a>
                <a href="/admin/manage-medias" class="btn btn-link">文件</a>
            </section>
            <section class="navbar-section">
                <a href="?commstatus=approved" class="btn btn-link">已通过</a>
                <a href="?commstatus=waiting" class="btn btn-link">待审核</a>
                <a href="?commstatus=spam" class="btn btn-link">垃圾</a>
            </section>
        </div>

        <div class="list-operate">
            <label class="checkbox">
                <div class="dropdown">
                    <div class="btn-group">选中项<i class="icon icon-caret"></i></a>
                        <ul class="menu">
                            <li class="menu-item">通过</li>
                            <li class="menu-item">待审核</b></li>
                            <li class="menu-item">标记垃圾/b></li>
                            <li class="menu-item">删除</b></li>
                        </ul>
                    </div>
                </div>
            </label>
            <div class="input-group input-inline">
                <input class="form-input" type="text" placeholder="请输入关键字">
                <button class="btn btn-primary input-group-btn">筛选</button>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>作者</th>
                <th></th>
                <th>内容</th>
            </tr>
            </thead>
            <tbody>
            {{range .CommArr}}
            <tr>
                <td>
                    <input type="checkbox">
                </td>
                <td>
                    <div class="comment-author" style="display: flex">
                        <img src="https://secure.gravatar.com/avatar/{{.MD5Mail}}?s=40&r=G" width="40" height="40" alt="">
                    </div>
                </td>
                <td>
                    <div class="comment-head" style="display: flex;flex-direction: column">
                        <strong><a href="http://smoe.cc" rel="noopener noreferrer" target="_blank">{{.Author}}</a></strong>
                        <span><a href="mailto:{{.Mail}}" target="_blank" rel="noopener noreferrer">{{.Mail}}</a></span>
                        <span>{{.Ip}}</span>
                    </div>
                </td>
                <td>
                    <div class="comment-body">
                        <div class="comment-date">{{.UnixFormat}} 于 <a href="/archives/{{.Cid}}" target="_blank" rel="noopener noreferrer">{{.Title}}</a></div>
                        <div class="comment-content">
                            {{.SubText}}
                        </div>
                        <div class="buttons">
                            <a class="button is-small">通过</a>
                            <a class="button is-small">待审核</a>
                            <a class="button is-small">垃圾</a>
                            <a class="button is-small">编辑</a>
                            <a class="button is-small">回复</a>
                            <a class="button is-small">删除</a>
                        </div>
                    </div>
                </td>
            </tr>
            {{end}}
            </tbody>
        </table>
    </div>
</div>
{{template "admin-footer.template"}}