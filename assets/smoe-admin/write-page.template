        function initMarkdown() {
            editor.run();

            var imageButton = $('#wmd-image-button'),
                linkButton = $('#wmd-link-button');

            Typecho.insertFileToEditor = function (file, url, isImage) {
                var button = isImage ? imageButton : linkButton;

